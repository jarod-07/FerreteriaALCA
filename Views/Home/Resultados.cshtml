@using FerreteriaAlca.Models

@model ArchivoViewModel

<div class="card">

    <div class="card-header">
        <h3>@Model.NombreProveedor</h3>
    </div>
    
    <div class="card-body">

        <div class="card-title">
            <div><label><h5>Consecutivo:</h5></label> @Model.Consecutivo</div>
            <div><label><h5>Monto Total:</h5></label> @Model.MontoTotal</div>
        </div>

        <table class="table table-striped table-sm table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Cabys </th>
                    <th>Codigo </th>
                    <th>Descripcion </th>
                    <th>Costo </th>
                    <th>Cantidad </th>
                    <th>Monto Total </th>
                </tr>
            </thead>
            <tbody>
                @foreach(ProductViewModel producto in @Model.Productos)
                {
                    <tr>
                        <td>@producto.CodigoCabys </td>
                        <td>@producto.Codigo </td>
                        <td>@producto.Descripcion </td>
                        <td>@producto.Costo </td>
                        <td>@producto.Cantidad </td>
                        <td>@producto.MontoTotal </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


